<%= link_to "Go to kinds", kinds_path %>

<h2>Tasks</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Category</th>
      <!-- Should we add more thinsg to the table? -->
      <th><%= link_to "Add new task", new_task_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name%></td>
        <td><%= task.kind_id%></td>
        <td><%= task.category%></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
